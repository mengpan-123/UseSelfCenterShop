<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/lvtitle"
    android:gravity="center|center_horizontal|center_vertical"
    >


    <!-- 白色的边框背景-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/borderinfo"
        android:paddingTop="20dp"
        android:paddingBottom="70dp"
        >

        <TextView
            android:id="@+id/title_sm"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="信 息 录 入"
            android:textColor="@color/colorgreen"
            android:textSize="42sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/borderbutton"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            >

            <TextView
                android:id="@+id/title_khid"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center"

                android:text="门 店 号"
                android:textColor="#666"
                android:textSize="28sp" />

            <EditText
                android:id="@+id/inputkhid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:lines="1"
                android:padding="20dp"
                android:singleLine="true"
                android:text=""
                android:textColorHint="#95A1AA"
                android:textSize="28sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/borderbutton"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/title_machine"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="机器编号"
                android:textColor="#666"
                android:textSize="28sp" />

            <EditText
                android:id="@+id/inputmachine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"

                android:lines="1"
                android:padding="20dp"
                android:singleLine="true"
                android:text=""
                android:textColorHint="#95A1AA"
                android:textSize="28sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"

            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/explain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="提示：请如实填写门店编码，设备号由系统自动获取。信息提交后将不可更改"
                android:textColor="#E5530B"
                android:textSize="24sp" />

        </LinearLayout>


        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            >
        <Button
            android:id="@+id/Login"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_gravity="center"
            android:background="@drawable/button_shape"
            android:text="提  交"
            android:textColor="#ffffff"
            android:textSize="30dp" />
        </LinearLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="30dp">
            <Button
                android:id="@+id/Login"
                android:background="@drawable/button_shape"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="60dp"
                android:text="  提    交  "
                android:textColor="#F0F0F0"
                android:textSize="30dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>