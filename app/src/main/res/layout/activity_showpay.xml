<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    >

    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#0fB6A4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="返回"
                android:textSize="42dp"
                android:id="@+id/returnback"
                android:textColor="@color/colorPrimary"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="50dp"
                android:id="@+id/storename"
                android:textColor="@color/mainColor"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="44dp"
                android:id="@+id/IamHy"
                android:textColor="@color/colorPrimary"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/borderbutton"
        android:layout_marginRight="20dp"
        android:gravity="center">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="请在下方扫码区展示付款码"
            android:textSize="32dp"
            android:gravity="center"

            />
    </LinearLayout>

    <!--//整单优惠-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="数量合计：1"
            android:textSize="32dp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/totalcount"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金额合计 ：100"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginLeft="150dp"
            android:textSize="32dp"

            android:gravity="center"
            android:id="@+id/totalpay"
            />
    </LinearLayout>


    <!--2020-02-13暂时注释-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="770dp"
        android:layout_marginTop="100dp"
        android:background="@mipmap/aliapyexam"
        android:id="@+id/wxuseinfo"
        android:orientation="vertical"
        >

    </LinearLayout>

    <!--2020-02-13以下部分添加为手动输入支付码进行支付 android:layout_marginTop="200dp"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Father"
        android:layout_marginTop="100dp">

        <EditText
            android:id="@+id/inputqyid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:lines="1"
            android:padding="20dp"
            android:singleLine="true"
            android:gravity="center"
            android:text=""
            android:hint="请输入支付宝/微信支付码，然后点击确认支付"
            android:textColorHint="#95A1AA"
            android:textSize="24sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/SUB_FATHER"
        android:layout_marginTop="30dp">
        <Button
            android:id="@+id/SurePrint"
            android:background="@drawable/button_shape"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:text="确认支付"
            android:textColor="#F0F0F0"
            android:textSize="30dp"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center">
        <TextView
            android:background="@drawable/button_shape"
            android:id="@+id/returnchoose"
            android:padding="20dp"
            android:layout_width="800dp"
            android:layout_height="110dp"
            android:text="重选其他支付方式"
            android:textColor="#F0F0F0"
            android:textSize="40dp"
            android:gravity="center"

            />
    </LinearLayout>
</LinearLayout>