<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEF7FA">
    <!--顶部颜色#0FB6A4-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:orientation="horizontal"
        android:background="#0FB6A4"
        android:id="@+id/shop_top">
        <!--公司logo-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/leftlogo">
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <!--首页和首页图标-->
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:onClick="return_home">
            <ImageView
                android:layout_width="45dp"
                android:layout_marginTop="5dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="@drawable/shouye"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textColor="#F0F0F0"
                android:textSize="28dp"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <!--支付成功-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="150dp">
        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="@drawable/faile" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付失败"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#575656"/>
        <TextView
            android:id="@+id/ErrReason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="30dp"

            android:textColor="#575656"/>
    </LinearLayout>

    <!--立即返回首页-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="60dp">
        <TextView
            android:id="@+id/newtopay"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:text="重新付款"
            android:gravity="center"
            android:textSize="30dp"
            android:textColor="#F0F0F0"
            android:background="@drawable/button_shape"/>
    </LinearLayout>
</LinearLayout>